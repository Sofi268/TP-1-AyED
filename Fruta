class Fruta {
    private:
        const int PESO_MAX= 200;
        int CANTIDAD ;
        string NOMBRE;
    public:
        Fruta(){
            NOMBRE = "";
            CANTIDAD = 0;
        }
        
        //SETTERS
        void setFruta();
        void setCantFruta();
        //GETTERS
        string getFruta(){return NOMBRE;};
        int getCantFruta(){return CANTIDAD;};
};
void Fruta::setFruta(){
    string nombre;
    cout<<"Ingresar la fruta: ";
    cin>>nombre;
    bool igual= false;
    for(int i= 0; i<3; i++){
        if (frutasPosibles[i]==nombre){
            igual = true;
        }
    }
    if(igual){
        NOMBRE=nombre;
    }
    else{
        while(!igual){
        cout<<"La fruta ingresada no es valida, por favor, ingrese un tipo de fruta permitida: "<<endl;
        cin>> nombre; 
            for(int i= 0; i<3; i++){
                if (frutasPosibles[i]==nombre){
                        igual = true;
                }
            }
        }
        NOMBRE=nombre;
    }
}
void Fruta::setCantFruta(){
    int cant = 0;
    bool f = false;
    int n;
    cout<<"Ingresar la cantidad de Fruta en kg: ";
    cin>>cant;cout<<endl;
    if(cant<=PESO_MAX&&cant>0){
        CANTIDAD=cant;
    }
    else{
        while(!f){
        cout<<"La cantidad de fruta no debe ser superior a 200KG.\nIngresar nuevo valor: "; cin>>n;
            if(n<=PESO_MAX&&n>0){ f=true;}
            if(n==200){
            cout<<"Se supero el limite de fruta disponible para ingresar"<<endl;
            break;
        }
        CANTIDAD = n;
        }   
    }
}
string Fruta::getFruta(){return NOMBRE;};
int Fruta::getCantFruta(){return CANTIDAD;};
