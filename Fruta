class Fruta {
    private:
        const int PESO_MAX= 200;
        int PESO;
        int CANTIDAD ;
        string NOMBRE;
    public:
        Fruta(){
            NOMBRE = "";
            PESO = 0;
            CANTIDAD = 0;
        }
        
        //SETTERS
        void setFruta(){
            string nombre;
            cout<<"Ingresar la fruta: ";
            cin>>nombre;
            NOMBRE=nombre;
        }
        void setCantFruta(){
            int cant = 0;
            bool f = false;
            int n;
            cout<<"Ingresar la cantidad de Fruta en kg: ";
            cin>>cant;cout<<endl;
            if(cant<=PESO_MAX&&cant>0){
                CANTIDAD=cant;
            }
            else{
                while(!f){
                cout<<"La cantidad de fruta no debe ser superior a 200KG.\nIngresar nuevo valor: "; cin>>n;
                    if(n<=PESO_MAX&&n>0){ f=true;}
                }
                CANTIDAD = n;
            }
        }
        
        //GETTERS
        string getFruta(){return NOMBRE;}
        int getCantFruta(){return CANTIDAD;}
};
